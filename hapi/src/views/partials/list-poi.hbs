<table class="table is-fullwidth">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Image</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each category.poi}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                {{description}}
            </td>
            <td>
                {{latitude}}
            </td>
            <td>
                {{longitude}}
            </td>
            <td>
                <img src="{{image}}" alt="Geo image" style="width:120px;height:100px;">
            </td>
            <td>
                <a href="/category/{{../category._id}}/deletepoi/{{_id}}" class="ui icon button">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
